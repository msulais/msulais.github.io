---
type Props = {
	title?: string
	description?: string
	lang?: string
}

const {
	title = 'Muhammad Sulais',
	description = 'Crafting digital experiences that users love. Front End Developer specializing in pixel-perfect UI, accessibility, and responsive design. See my latest projects.',
	lang = 'en-US',
} = Astro.props
---
<!doctype html>
<html lang={ lang }>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={ description }>
		<title>{ title }</title>
		<slot name="favicon">
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		</slot>
		<slot name="open-graph-protocol" />
	</head>
	<body>
		<slot />
	</body>
</html>