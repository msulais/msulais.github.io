---
import { Ids } from '../../_scripts/shared/ids'
import CSS from './index.module.scss'
---

<div class={CSS.splash} id={Ids.splash}>
	<div
		class={CSS.progressbar}
		role="progressbar"
		aria-valuenow="0"
		aria-label="Loading"
		aria-valuetext="0 percent"
		id={Ids.splash_progressValue}
		style={{ '--c-progress': '0%' }}
	/>
	<div class={CSS.content}>
		<p data-css-progress>
			<span
				aria-hidden="true"
				id={Ids.splash_progressText}>0%</span>
			<span data-css-triangle id={Ids.splash_triangle}/>
		</p>
		<p data-css-about>
			<span>Portfolio of</span>
			MUHAMMAD<br/>SULAIS
		</p>
	</div>
	<div class={CSS.waitIndicator}>
		<button disabled id={Ids.splash_button}>
