---
import { C_Projects } from "../../../../constants/projects";
import { Ids } from "../../_scripts/shared/ids";
import fallbackImg from '../../_assets/images/image-not-available.png'
import CSS from './index.module.scss'
---

<section id={Ids.page_projects} class={CSS.projects}>
	<div aria-hidden="true" class={CSS.strips}/>
	<div class={CSS.content}>
		<div class={CSS.title}>
			<svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M17.1377 32.3199C16.6178 33.1707 15.3822 33.1707 14.8623 32.3199L1.2397 10.0284C0.696751 9.13995 1.33617 7.99982 2.37741 7.99982L29.6226 7.99982C30.6638 7.99982 31.3033 9.13995 30.7603 10.0284L17.1377 32.3199Z" fill="#202020"/>
				<path d="M33.1377 58.5019C32.6178 59.3527 31.3822 59.3527 30.8623 58.5019L17.2397 36.2104C16.6967 35.322 17.3362 34.1818 18.3774 34.1818L45.6226 34.1818C46.6638 34.1818 47.3033 35.322 46.7603 36.2104L33.1377 58.5019Z" fill="#202020"/>
