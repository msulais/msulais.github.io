---
import favicon from './_assets/favicon/favicon.svg'
import Html from "../../layouts/Html.astro"
import Splash from './_components/Splash/index.astro'
import Header from './_components/Header/index.astro'
import Transition from './_components/Transition/index.astro'
import Navigation from './_components/Navigation/index.astro'
import Hero from './_components/Hero/index.astro'
import About from './_components/About/index.astro'
import Projects from './_components/Projects/index.astro'
import ProjectDetail from './_components/ProjectDetail/index.astro'
import './_styles/fonts.scss'
import './_styles/index.scss'
import { C_Projects } from '../../constants/projects'
---

<Html favicon_url={favicon.src}>
	<Fragment slot='link'>
		{C_Projects.all.map(v => <Fragment>
			{v.images.map(image =>
				<link rel="prefetch" href={image[0]} as="image">
			)}
		</Fragment>)}
	</Fragment>
	<Splash />
	<Transition/>
	<Header/>
	<Navigation/>
	<ProjectDetail/>

	<Hero/>
	<About/>
	<Projects/>

	<script src="./_scripts/index.ts"/>
</Html>